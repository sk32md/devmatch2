<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <h4>Sign up for a Pro account for $10/month to gain access to all our members!</h4>
    <% else %>
      <h1>Basic Account</h1>
      <h4>Sign up for free and get basic access to the community.</h4>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <% if params[:plan] =='2' %>
      <%= render "pro_form" %>
    <% else %>
      <%= render "basic_form" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>